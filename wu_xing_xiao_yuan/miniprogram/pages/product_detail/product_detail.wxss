/* pages/product_detail/product_detail.wxss */
/* 轮播图 */
.banner{
  display: flex;
  flex-direction: row;
  align-self: center;
  width: 100%;
  height: 700rpx;
}
.banner_1{
  width: 100%;
  height: 700rpx;
  overflow: hidden;
}

/* 产品信息 */
.product{
  display: flex;
  flex-direction: column;
  width: 96%;
  align-self: center;
  margin-bottom: 20rpx;
}
.product_1{
  display: flex;
  flex-direction: row;
  width: 100%;
  font-size: 25px;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
}
.product_2{
  color:rgb(141, 141, 141);
  display: flex;
  font-size: 20px;
  margin-left: 10rpx;
}
.sub{
  color:rgb(141, 141, 141);
  display: flex;
  font-size: 15px;
  margin-left: 10rpx;
}
.product_3{
  color:white;
  width:20%;
  display: flex;
  font-size: 15px;
  margin-left: 10rpx;
  border:1px solid #9fc0ec;
  border-radius: 100rpx;
  background-color: #9fc0ec;
}
.txt{
  align-self: center;
  margin-left: 25rpx;
} 
.userinfo{
  display: flex;
  margin-top: 10px;
  height: 50px;
}
.userinfo-box{
  width: 60%;
  display: flex;
}
.userinfo-name{
  padding-top: 8px;
  padding-left: 3px;
}
.userinfo-priductname{
  overflow: hidden;
  flex-wrap: wrap;
  white-space: wrap;
  padding-left: 5px;
  /* text-overflow: ellipsis; */
  font-size: 20px;
}

/*三个蓝色图标的格式*/
.allbtn{
  padding-top: 3rpx;
  display: flex;
  position: fixed;
  bottom: 0;
}
.btnItem{
  width: 100rpx;
  display: flex;
  align-items:center;
  flex-direction: column;
}
.btnItem image{
  width: 70rpx;
  height: 70rpx;
}
.btnItem text{
  margin-top: 0rpx;
  font-size: 28rpx;
  color: gray;
}
.btnimg1{
  height: 5rpx;
  width: 5rpx;
  position: fixed;
  left: 0px;
  bottom: 0px;
  left: 0px;
}


/*和他聊聊和立即购买的图标样式*/
.btn2{
  margin-bottom: 20rpx;
  background-color: #ffe44a;
  width: 100%;
  height: 60rpx;
  border-radius: 100rpx;
  color:black;
  box-shadow: 0rpx 0rpx #828292;
  bottom: 0;
  right:95px;
  position: fixed;
  height: 70rpx;
}
.btn3{
  margin-bottom: 20rpx;
  background-color: #f0ab45;
  width: 100%;
  height: 60rpx;
  border-radius: 100rpx;
  color:black;
  box-shadow: 0rpx 0rpx #828292;
  bottom: 0;
  right:5px;
  position: fixed;
  height: 70rpx;
}