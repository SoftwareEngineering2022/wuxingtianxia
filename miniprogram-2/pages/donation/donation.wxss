/* pages/donation/donation.wxss */
swiper{
  height:520rpx;
}
swiper image{
  width: 100%;
  height: 100%;
}


/* 五个小图标的wxss格式 */
.allbtn{
  padding-top: 15rpx;
  display: flex;
  
}
.btnItem{
  width: 100rpx;
  display: flex;
  align-items:center;
  flex-direction: column;
  padding-right: 60rpx;
}
.btnItem image{
  width: 70rpx;
  height: 70rpx;
}
.btnItem text{
  margin-top: 0rpx;
  font-size: 28rpx;
  color: gray;
  display: flex;
}

/* 旧衣物回收的WXSS格式 */
.bigbtn{
  height: 100rpx;
  align-items: center;
  padding-left: 40rpx;
  padding-top: 15rpx;
}

.bigbtn image{
  height:150rpx;
}

/* 热门活动四个字的style设置 */
.imp{
  margin-top: 50rpx;
}
.imp text{
  font-size: 38rpx;
  color: gray;
}

/* 热门活动的图标 */
.allbtn2{
  padding-top: 0rpx;
  display: flex;
  flex-wrap: wrap;
}
.btnItem2{
  width: 50%;
  height: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.btnItem2 image{
  width: 180px;
  height: 100px;
}