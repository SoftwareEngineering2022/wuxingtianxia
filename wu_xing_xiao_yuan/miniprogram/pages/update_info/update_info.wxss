.me-about{
  display: flex;
  padding: 20rpx 20rpx;
  justify-content: space-between;
  border-bottom: 2rpx solid rgb(238, 238, 238);
  background-color: white;
  width: 100%;
  height: 50px;
}
.me-about >text{
  font-size: 20px;
  width: 20%;
}
.me-about> input{
  width: 30%;
  margin-top: 3px;
  margin-left: 150px;
  font-size: 20px;
}
.me-about image{
  align-self: center;
  width: 35rpx;
  height: 35rpx;
}
.btn{
  color: white;
  border:#D4D6D9 1px solid;
  background-color:#87C38F;
  width: 80px;
  height: 40px;
  position: relative;
  top: 65px;
  left: 10px;
}