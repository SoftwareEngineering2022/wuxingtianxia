/* 商品 */
.product{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-self: center;
  align-items: center; 
  background-color: snow;
}
.product_1{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.img{
  width: 350rpx;
  height: 350rpx;
  border-radius: 20rpx;
  border: 3rpx solid #9fc0ec;
  box-shadow:0rpx 2rpx 3rpx 3rpx #c8c3c3;
}
.product_2{
  display: flex;
  flex-direction: row;
  height: 90rpx;
  border: 1px solid silver;
  width: 90%;
  background-color: rgb(245, 239, 239);
  border-radius: 10rpx;
  align-items: center;
  justify-content: space-between;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
  box-shadow:0rpx 2rpx 3rpx 3rpx #c8c3c3;
}
/* 选择栏 */
.xuanze{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  font-size: 20px;
  align-items: center;
  align-self: center;
  justify-content: space-between;
  background-color: rgb(240, 237, 237);
}

.xuanze_1{
  display: flex;
  width: 80%;
  align-self: center;
  align-items: center;
  justify-content: center;
  margin-left: 100rpx;
  margin-right:100rpx ;
  /* margin-right: 10rpx; */
}
.goodName{
  width: 60%;
  text-overflow: ellipsis;
  overflow:hidden;
  white-space:nowrap;
  font-size:15px;
  display:webkit-box;
}

.goodPrice{
  margin-right: 45rpx;
}

