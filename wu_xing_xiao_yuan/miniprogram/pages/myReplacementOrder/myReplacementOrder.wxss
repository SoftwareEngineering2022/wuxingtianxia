.navbar {
	width: 100%;
	height: 90rpx;
	/* 文本不换行 */
	white-space: nowrap;
	display: flex;
	box-sizing: border-box;
	border-bottom: 1rpx solid #eee;
	background: #fff;
	align-items: center;
	/* 固定在顶部 */
	position: static;
	left: 0rpx;
	top: 0rpx;
}

.nav-item {
	padding-left: 25rpx;
  padding-right: 25rpx;
  width: 33.3%;
	height: 100%;
	display: inline-block;
	/* 普通文字大小 */
	font-size: 28rpx;
}

.nav-text {
	width: 100%;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	letter-spacing: 4rpx;
	box-sizing: border-box;
}

.tab-on {
	color: #87C38F;
	/* 选中放大 */
	font-size: 35rpx !important;
	font-weight: 600;
}
.order_container_box{
  display: flex;
  flex-wrap: wrap;
  border-bottom: 1px solid lightgray;
  width: 100%;
  height: 160px;
  background-color: white;
  margin-bottom: 8px;
  border-radius: 5%;
}
.order_item_img{
  
  height: 100px;
  box-sizing: border-box;
}
.order_item_img image{
  margin: 15px 10px 0px 10px;
  width: 80px;
  height: 80px;
  padding-top: 1px;
  line-height: 100px;
}
.btn1{
  
  width: 100px;
  height: 30px;
  border: none;
  border-radius: 5px;
  cursor:pointer;
  color:#61666D;
  background-color: white;
  box-shadow: 1rpx 1rpx #828292;
  position: relative;
  top: 5px;
  left: 50px;
}
