/* 商品列表样式 */
.product_list{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 300rpx;
  align-self: center;
  align-items: center;
  justify-content: space-between;
  margin-top: 5px;
  background-color: white;
}
.product_list_1{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-left: 20rpx;
}
.product_list_2{
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
}
.product_list_3{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.name{
  font-size:20px
}
.price{
  color:red;
  font-size: 20px;
  margin-top: 80rpx;
}
.line{
  width: 100%;
  height: 5rpx;
  background-color: rgb(136, 135, 135);
  margin-bottom: 10rpx;
}

.pic{
  width:250rpx;
  height:250rpx;
  border-radius: 20rpx;
}
.pic1{
  width: 100%;
  height:100%;
  border-radius: 20rpx;
}
/* 按钮模块样式 */
.anniu{
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  background-color: white;
  align-items: center;
} 

.del{
  margin-right: 20rpx;
}

.num{
  margin-left: 10px;
  font-size: 30rpx;
}
.want{
  
  background-color:bisque ;
  color: black;
  border-radius: 5px;
  box-shadow: 1px 1px 1px lightgray;
}