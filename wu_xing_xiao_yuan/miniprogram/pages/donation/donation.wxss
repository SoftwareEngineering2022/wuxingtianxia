/* pages/donation/donation.wxss */

swiper{
  height:550rpx;
}
swiper image{
  width: 100%;
  height: 100%;
}


/* 五个小图标的wxss格式 */
.allbtn{
  padding-top: 15rpx;
  display: flex;
  
}
.btnItem{
  width: 150rpx;
  display: flex;
  align-items:center;
  flex-direction: column;
  padding-right: 60rpx;
}
.btnItem image{
  width: 90rpx;
  height: 90rpx;
}
.btnItem text{
  margin-top: 0rpx;
  font-size: 28rpx;
  color: gray;
  display: flex;
}

/* 旧衣物回收的WXSS格式 */
.bigbtn{
  height: 180rpx;
  width: 490px;
  align-items: center;
  padding-top: 15rpx;
}

.bigbtn image{
  height:180rpx;
  width: 75%;
}

/* 热门活动四个字的style设置 */
.imp{
  margin-top: 30rpx;
}
.imp text{
  font-size: 45rpx;
  color: black;
  text-shadow: 3px 3px lightgray;
}

/* 热门活动的图标 */
.allbtn2{
  padding-top: 15rpx;
  display: flex;
  flex-wrap: wrap;
  
}
.btnItem2{
  margin-bottom: 0px;
  width: 45%;
  height: 110px;
  display: flex;
  flex-direction: column;
  margin: 6px;
  
  
}
.btnItem2 image{
  width: 180px;
  height: 100px;
  border-radius: 12%;
  box-shadow: 2px 2px lightgray;
}